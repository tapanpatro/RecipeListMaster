<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_6dp"
    android:layout_margin="@dimen/padding_10dp"
    app:cardElevation="@dimen/padding_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_contain_recipe_item"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img_recipe"
            android:src="@drawable/cupcake"
            android:layout_weight="0.5"
            android:layout_width="@dimen/dimen_0do"
            android:layout_height="match_parent" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="@dimen/dimen_0do"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_recipe_name"
                android:text="@string/str_recipe_name"
                android:textSize="@dimen/dimen_30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_servings"
                android:text="@string/str_servings"
                android:textSize="@dimen/text_23sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>