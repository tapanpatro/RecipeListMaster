<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/view_video_step"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp" />

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_8dp"
            android:layout_marginLeft="@dimen/padding_8dp"
            android:layout_marginRight="@dimen/padding_8dp"
            android:layout_marginStart="@dimen/padding_8dp"
            android:layout_marginTop="@dimen/padding_10dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:text="@string/video_title"
            android:textSize="@dimen/text_23sp" />

        <TextView
            android:id="@+id/tv_description_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_8dp"
            android:layout_marginLeft="@dimen/padding_8dp"
            android:layout_marginRight="@dimen/padding_8dp"
            android:layout_marginStart="@dimen/padding_8dp"
            android:layout_marginTop="@dimen/padding_10dp"
            android:textSize="@dimen/text_19sp"
            android:textStyle="normal"
            tools:text="Description of the step " />

        <LinearLayout
            android:padding="@dimen/dimen_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_previous"
                android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_19sp"
                android:textAllCaps="false"
                android:text="@string/vd_previous"
                android:layout_margin="@dimen/dimen_5dp"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_width="@dimen/dimen_0do"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_next"
                android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                android:textColor="@color/white"
                android:textSize="@dimen/text_19sp"
                android:textAllCaps="false"
                android:text="@string/vd_next"
                android:layout_margin="@dimen/dimen_5dp"
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:layout_width="@dimen/dimen_0do"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </LinearLayout>

</ScrollView>